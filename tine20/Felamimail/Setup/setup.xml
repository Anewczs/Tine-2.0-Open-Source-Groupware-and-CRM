<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Felamimail</name>
    <!-- gettext('Felamimail') -->   
    <version>0.1</version>
    <order>30</order>
    <status>disabled</status>
    <tables>
        <table>
            <name>felamimail_backend</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>user_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>name</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>host</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>user</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>password</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>port</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>secure_connection</name>
                    <type>enum</type>
                    <value>none</value>
                    <value>TLS</value>
                    <value>SSL</value>
                </field>
                <field>
                    <name>created_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>creation_time</name>
                    <type>datetime</type>
                </field> 
                <field>
                    <name>last_modified_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>last_modified_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>is_deleted</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>deleted_by</name>
                    <type>integer</type>
                </field>            
                <field>
                    <name>deleted_time</name>
                    <type>datetime</type>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>user_id</name>
                    <field>
                        <name>id</name>
                    </field>
                </index>
            </declaration>
        </table>
        <table>
            <name>felamimail_folder</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>backend_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>user_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>localname</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>globalname</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>delimiter</name>
                    <type>text</type>
                    <length>1</length>
                </field>
                <field>
                    <name>is_selectable</name>
                    <type>boolean</type>
                    <default>1</default>
                </field>                
                <field>
                    <name>has_children</name>
                    <type>boolean</type>
                    <default>0</default>
                </field>                
                <field>
                    <name>uidnext</name>
                    <type>integer</type>
                    <length>64</length>
                </field>
                <field>
                    <name>uidvalidity</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>timestamp</name>
                    <type>datetime</type>
                </field>                
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <!-- @todo add unique key for backend + globalname? seems to be too long ... -->
                <!-- @todo add foreign key index to backend? -->
            </declaration>
        </table>
        <table>
            <name>felamimail_cache_message</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>messageuid</name>
                    <type>integer</type>
                    <length>64</length>
                </field>
                <field>
                    <name>folder_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>subject</name>
                    <type>text</type>
                </field>
                <field>
                    <name>from</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <!-- @todo move to & cc to extra tables --> 
                <field>
                    <name>to</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>cc</name>
                    <type>text</type>
                    <length>256</length>
                </field>
                <field>
                    <name>received</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>sent</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>size</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>flags</name>
                    <type>text</type>
                </field>
                <field>
                    <name>timestamp</name>
                    <type>datetime</type>
                </field>                
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>messageuid-folder_id</name>
                    <unique>true</unique>
                    <field>
                        <name>messageuid</name>
                    </field>
                    <field>
                        <name>folder_id</name>
                    </field>
                </index>
                <index>
                    <name>message::folder_id--folder::id</name>
                    <field>
                        <name>folder_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>felamimail_folder</table>
                        <field>id</field>
                        <ondelete>cascade</ondelete>
                        <onupdate>cascade</onupdate>
                    </reference>
                </index>
            </declaration>
        </table>
    </tables>
</application>
