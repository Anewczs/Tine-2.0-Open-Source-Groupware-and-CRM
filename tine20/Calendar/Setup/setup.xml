<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Calendar</name>
    <!-- gettext('Calendar') -->   
    <version>0.1</version>
    <order>15</order>
    <status>enabled</status>
    <tables>
        <!-- events -->
        <table>
            <name>cal_events</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>container_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>created_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>creation_time</name>
                    <type>datetime</type>
                </field> 
                <field>
                    <name>last_modified_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>last_modified_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>is_deleted</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>deleted_by</name>
                    <type>integer</type>
                </field>            
                <field>
                    <name>deleted_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>sep</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                    <default>0</default>
                </field>
                <field>
                    <name>dtend</name>
                    <type>datetime</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>transp</name>
                    <type>enum</type>
                    <value>TRANSPARENT</value>
                    <value>OPAQUE</value>
                    <default>OPAQUE</default>
                </field>
                <field>
                    <name>class_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>description</name>
                    <type>clob</type>
                </field>
                <field>
                    <name>geo</name>
                    <type>float</type>
                </field>
                <field>
                    <name>location</name>
                    <type>text</type>
                    <length>255</length>
                </field>            
                    <field>
                    <name>organizer</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>priority</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>status_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>summary</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>url</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>uid</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>dtstart</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>recurid</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>rrule</name>
                    <type>text</type>
                    <length>255</length>
                </field>
                <field>
                    <name>is_all_day_evnet</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>rrule_until</name>
                    <type>datetime</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>organizer_tz</name>
                    <type>text</type>
                    <length>255</length>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>container_id</name>
                    <field>
                        <name>container_id</name>
                    </field>
                </index>
                <index>
                    <name>dtstart</name>
                    <field>
                        <name>dtstart</name>
                    </field>
                </index>
                <index>
                    <name>dtend</name>
                    <field>
                        <name>dtend</name>
                    </field>
                </index>
                <index>
                    <name>organizer</name>
                    <field>
                        <name>organizer</name>
                    </field>
                </index>
                <index>
                    <name>uid</name>
                    <field>
                        <name>uid</name>
                    </field>
                </index>
            </declaration>
        </table>
        
        <!-- exceptions (dates when recuring event does not take palce) -->
        <table>
            <name>cal_exdate</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>cal_event_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>exdate</name>
                    <type>datetime</type>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>cal_exdate::cal_event_id-cal_events::id</name>
                    <field>
                        <name>cal_event_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>cal_events</table>
                        <field>id</field>
                    </reference>
                    <ondelete>cascade</ondelete>
                </index>
                <index>
                    <name>exdate</name>
                    <field>
                        <name>exdate</name>
                    </field>
                </index>
            </declaration>
        </table>
        
        <!-- attendee -->
        <table>
            <name>cal_attendee</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>cal_event_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>user_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>type</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                    <default>user</default>
                </field>
                <field>
                    <name>quantity</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                    <default>1</default>
                </field>
                <field>
                    <name>status</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                    <default>0</default>
                </field>
                <field>
                    <name>status_authkey</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>cal_attendee::cal_event_id-cal_events::id</name>
                    <field>
                        <name>cal_event_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>cal_events</table>
                        <field>id</field>
                    </reference>
                    <ondelete>cascade</ondelete>
                </index>
                <index>
                    <name>user_id</name>
                    <field>
                        <name>user_id</name>
                    </field>
                </index>
                <index>
                    <name>type</name>
                    <field>
                        <name>type</name>
                    </field>
                </index>
                <index>
                    <name>status</name>
                    <field>
                        <name>status</name>
                    </field>
                </index>
                <index>
                    <name>status_authkey</name>
                    <field>
                        <name>status_authkey</name>
                    </field>
                </index>
            </declaration>
        </table>
        
        
    </tables>
</application>
