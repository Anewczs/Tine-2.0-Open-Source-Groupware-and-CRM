<?xml version="1.0" encoding="UTF-8"?>
<config>
    <model>Crm_Model_Lead</model>
    <name>lead_default_ods</name>
    <type>export</type>
    <plugin>Crm_Export_Ods</plugin>
    <template>crm_lead_export.ods</template>
    <description>default ods lead export definition</description>
    <!--headers>
        <header>{date}</header>
        <header>{user}</header>
    </headers-->
    <columns>
        <column>
            <identifier>lead_name</identifier>
            <header>Lead Name</header>
            <type>string</type>
            <width>5cm</width>
        </column>
        <column>
            <identifier>description</identifier>
            <header>Description</header>
            <type>string</type>
            <width>10cm</width>
        </column>
        <column>
            <identifier>status</identifier>
            <header>Status</header>
            <type>status</type>
            <width>4cm</width>
        </column>
        <column>
            <identifier>source</identifier>
            <header>Source</header>
            <type>source</type>
            <width>4cm</width>
        </column>
        <column>
            <identifier>type</identifier>
            <header>Type</header>
            <type>type</type>
            <width>4cm</width>
        </column>
        <column>
            <identifier>turnover</identifier>
            <header>Turnover</header>
            <type>currency</type>
            <currency>EUR</currency>
            <width>2cm</width>
        </column>
        <column>
            <identifier>probability</identifier>
            <header>Probability</header>
            <type>percentage</type>
            <width>2cm</width>
        </column>
        <column>
            <identifier>expected</identifier>
            <header>Expected Sales</header>
            <type>currency</type>
            <currency>EUR</currency>
            <width>4cm</width>
            <formula>=INDIRECT(ADDRESS(ROW();COLUMN()-2))*INDIRECT(ADDRESS(ROW();COLUMN()-1))</formula>
        </column>
        <column>
            <identifier>start</identifier>
            <header>Date Start</header>
            <type>datetime</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>end</identifier>
            <header>Date End</header>
            <type>datetime</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>end_scheduled</identifier>
            <header>Date End Scheduled</header>
            <type>datetime</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>duration</identifier>
            <header>Duration</header>
            <type>number</type>
            <width>4cm</width>
            <formula>=IF(ISBLANK(INDIRECT(ADDRESS(ROW();COLUMN()-2)));"";DAYS(INDIRECT(ADDRESS(ROW();COLUMN()-2));INDIRECT(ADDRESS(ROW();COLUMN()-3))))</formula>
        </column>
        <column>
            <identifier>created_by</identifier>
            <header>Created By</header>
            <type>created_by</type>
            <width>4cm</width>
            <field>accountDisplayName</field>
        </column>
        <column>
            <identifier>creation_time</identifier>
            <header>Creation Date</header>
            <type>datetime</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>container</identifier>
            <field>name</field>
            <header>Container</header>
            <type>container_id</type>
            <width>4cm</width>
        </column>
        <column>
            <identifier>container_id</identifier>
            <field>id</field>
            <header>Container ID</header>
            <type>container_id</type>
            <width>4cm</width>
        </column>
    </columns>
</config>
