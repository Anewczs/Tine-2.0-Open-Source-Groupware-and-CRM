<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Timesheet</name>
    <version>0.1</version>
    <order>60</order>
    <status>disabled</status>
    <tables>
        <table>
            <name>timesheet_category</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>name</name>
                    <type>text</type>
                    <length>128</length>
                    <notnull>true</notnull>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
            </declaration>
        </table>
        <table>
            <name>timesheet</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>account_id</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>contract_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>category_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>start</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>duration</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>description</name>
                    <type>text</type>
                </field>
                <field>
                    <name>quantity</name>
                    <type>double</type>
                </field>
                <field>
                    <name>unitprice</name>
                    <type>double</type>
                </field>
                <field>
                    <name>created_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>creation_time</name>
                    <type>datetime</type>
                </field> 
                <field>
                    <name>last_modified_by</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>last_modified_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>is_deleted</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>deleted_by</name>
                    <type>integer</type>
                </field>            
                <field>
                    <name>deleted_time</name>
                    <type>datetime</type>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>timesheet::account_id--accounts::id</name>
                    <field>
                        <name>account_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>accounts</table>
                        <field>id</field>
                    </reference>
                </index>
                <index>
                    <name>timesheet::category_id--timesheet_category::id</name>
                    <field>
                        <name>category_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>timesheet_category</table>
                        <field>id</field>
                    </reference>
                </index>
            </declaration>
        </table>
    </tables>
    <!-- @todo add foreign key timesheet::contract_id erp_contracts::id / erp has to be installed first -->
    <!-- @todo add more categories -->
    <defaultRecords>
        <record>
            <table>
                <name>timesheet_category</name>
            </table>
            <field>
                <name>id</name>
                <value special="uid">uid</value>
            </field>
            <field>
                <name>name</name>
                <value>Implementation</value>
                <!-- gettext('Implementation') -->
            </field>
        </record>
    </defaultRecords>    
</application>
